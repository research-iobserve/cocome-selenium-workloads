<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC "-//Puppy Crawl//DTD Import Control 1.3//EN" "http://checkstyle.sourceforge.net/dtds/import_control_1_3.dtd">
<!--  <!DOCTYPE import-control SYSTEM 
	"./qa-configurations/import_control_1_3.dtd"> -->
<import-control pkg="org.iobserve">
	<allow pkg="com"/>
	<allow pkg="java"/>
	<allow pkg="javax"/>
    <allow pkg="kieker"/>

	<allow pkg="org.apache"/>
    <allow pkg="org.hamcrest"/>
    <allow pkg="org.junit"/>
    <allow pkg="org.json"/>
    <allow pkg="org.mockito"/>
    <allow pkg="org.neo4j"/>
	<allow pkg="org.openqa.selenium.phantomjs"/>
	<allow pkg="org.openqa.selenium"/>
	<allow pkg="org.powermock"/>
    <allow pkg="org.slf4j"/>
    <allow pkg="org.reflections"/>
    <allow class="java.util.logging.Level"/>
        
    <!--  own application -->
    <allow pkg="org.iobserve"/>
	<!--  disallow -->
    <disallow pkg="kieker.common.logging"/>
    <!-- enforce the use of slf4j -->
    <disallow class="org.apache.logging.log4j.LogManager"/>
    <disallow class="org.apache.logging.log4j.Logger"/>
    <disallow pkg="junit.framework"/>
    <disallow pkg="sun"/>
    <disallow pkg="org.apache.commons.logging"/>
</import-control>
